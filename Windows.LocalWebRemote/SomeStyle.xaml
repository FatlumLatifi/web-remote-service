<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <FontFamily x:Key="CascadiaMono">Cascadia Mono</FontFamily>
    
    <DropShadowEffect x:Key="SubmitEffect" BlurRadius="30" ShadowDepth="0" Opacity="1" 
                Color="#468966" RenderingBias="Performance"/>

    <DropShadowEffect x:Key="CancelEffect" BlurRadius="30" ShadowDepth="0" Opacity="1" 
                Color="#8E2800" RenderingBias="Performance"/>

    <DropShadowEffect x:Key="MaroonEffect" BlurRadius="30" ShadowDepth="0.5" Opacity="1" 
                Color="Maroon" RenderingBias="Performance"/>

    <DropShadowEffect x:Key="HoverEffect" BlurRadius="20" ShadowDepth="0" Opacity="1" 
                Color="Aqua" RenderingBias="Performance"/>

    <Style TargetType="Viewbox" x:Key="SVGButton">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect" Value="{StaticResource HoverEffect}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Border" x:Key="BorderButton">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect" Value="{StaticResource HoverEffect}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Viewbox" x:Key="SubmitSVG">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect" Value="{StaticResource SubmitEffect}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Viewbox" x:Key="CancelSVG">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect" Value="{StaticResource CancelEffect}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Label">
        <Setter Property="FontWeight" Value="ExtraBold" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <Style TargetType="TextBox">
        <Setter Property="FontWeight" Value="ExtraBold" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Height" Value="40" />
    </Style>
</ResourceDictionary>