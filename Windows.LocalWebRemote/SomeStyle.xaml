<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:props="clr-namespace:Windows.LocalWebRemote.Properties" >

    <FontFamily x:Key="CascadiaMono">Cascadia Mono</FontFamily>

    <SolidColorBrush x:Key="AccentBrush" Color="{DynamicResource {x:Static SystemColors.AccentColorKey}}"/>
    <SolidColorBrush x:Key="HighlightText" Color="{DynamicResource {x:Static SystemColors.HighlightTextColorKey}}"/>
    <SolidColorBrush x:Key="ControlText" Color="{DynamicResource {x:Static SystemColors.ControlTextColorKey}}"/>


    <DropShadowEffect x:Key="SubmitEffect" BlurRadius="30" ShadowDepth="0" Opacity="1" 
                Color="#468966" RenderingBias="Performance"/>

    <DropShadowEffect x:Key="CancelEffect" BlurRadius="30" ShadowDepth="0" Opacity="1" 
                Color="#8E2800" RenderingBias="Performance"/>

    <DropShadowEffect x:Key="MaroonEffect" BlurRadius="20" ShadowDepth="0" Opacity="1" 
                Color="Maroon" RenderingBias="Performance"/>

    <DropShadowEffect x:Key="HoverEffect" BlurRadius="20" ShadowDepth="0" Opacity="1" 
                Color="Aqua" RenderingBias="Performance"/>

 

    <Style TargetType="Viewbox" x:Key="SVGButton">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect" Value="{StaticResource HoverEffect}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Border" x:Key="BorderButton">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect" Value="{StaticResource HoverEffect}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Viewbox" x:Key="SubmitSVG">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect" Value="{StaticResource SubmitEffect}" />
                
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Viewbox" x:Key="CancelSVG">
        
        <Setter Property="Path.Fill" Value="Yellow" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect" Value="{StaticResource MaroonEffect}" />
                <Setter Property="Path.Fill" Value="Maroon" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="Path" x:Key="CancelPath">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect" Value="{StaticResource MaroonEffect}" />
            </Trigger>
        </Style.Triggers>
    </Style>


    <Style TargetType="Button" x:Key="ShutdownButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Viewbox>
                        <Path Fill="Maroon" Grid.Column="1" HorizontalAlignment="Center" 
                                Data="M183.621 4.551C53.972 22.207-27.631 153.594 13.475 278.5 47.5 381.888 157.372 442.275 262.825 415.544c119.005-30.166 186.531-153.643 147.724-270.127C378.991 50.69 282.886-8.967 183.621 4.551m21.829 63.856c-4.02 1.751-8.226 6.858-8.955 10.872-.322 1.772-.453 26.476-.29 54.899.288 50.397.346 51.745 2.357 54.438 7.122 9.537 19.922 9.746 26.995.441 3.075-4.047 3.023-111.109-.057-115.239-4.506-6.044-13.206-8.392-20.05-5.411M143 100.183c-4.473 1.281-15.223 10.07-24.102 19.706-37.053 40.212-46.32 100.346-22.902 148.611 34.23 70.548 123.624 94.488 188.496 50.48 59.752-40.534 74.443-121.372 33.344-183.48-6.138-9.276-25.077-28.866-32.282-33.393-8.162-5.128-17.79-3.315-22.451 4.227-5.477 8.861-3.396 15.847 7.333 24.614 49.584 40.517 51.145 117.009 3.181 155.876-29.088 23.569-68.886 28.545-102.18 12.773-37.845-17.927-59.213-55.548-55.347-97.444 2.495-27.044 12.784-47.406 34.183-67.645 12.295-11.63 14.575-15.646 12.743-22.448-2.526-9.38-11.058-14.443-20.016-11.877"/>
                    </Viewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect" Value="{StaticResource MaroonEffect}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Button" x:Key="DonationButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" >
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Foreground="{StaticResource HighlightText}" 
                                Grid.Column="0"
                                HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="17">
                              <Run Text="{x:Static props:UITexts.Donate}" />
                        </TextBlock>

                        <Viewbox Grid.Column="1" Margin="10">
                            <Path 
                                Fill="{StaticResource AccentBrush}"
                                Data="M17.726 13.02 14 16H9v-1h4.065a.5.5 0 0 0 .416-.777l-.888-1.332A1.995 1.995 0 0 0 10.93 12H3a1 1 0 0 0-1 1v6a2 2 0 0 0 2 2h9.639a3 3 0 0 0 2.258-1.024L22 13l-1.452-.484a2.998 2.998 0 0 0-2.822.504zm1.532-5.63c.451-.465.73-1.108.73-1.818s-.279-1.353-.73-1.818A2.447 2.447 0 0 0 17.494 3S16.25 2.997 15 4.286C13.75 2.997 12.506 3 12.506 3a2.45 2.45 0 0 0-1.764.753c-.451.466-.73 1.108-.73 1.818s.279 1.354.73 1.818L15 12l4.258-4.61z"
                                />
                        </Viewbox>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect" Value="{StaticResource HoverEffect}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    
    <Style TargetType="Label">
        <Setter Property="FontWeight" Value="ExtraBold" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <Style TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <Style TargetType="TextBox">
        <Setter Property="FontWeight" Value="ExtraBold" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Height" Value="40" />
    </Style>
</ResourceDictionary>